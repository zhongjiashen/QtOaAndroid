<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:background="@color/colorPrimary"
        android:id="@+id/view"
        />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="18dp"
        app:srcCompat="@mipmap/ic_arrow_left"
        android:id="@+id/iv_back"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        android:layout_marginStart="15dp"/>

    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="0dp"
        android:layout_height="154dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/ic_personal_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:layout_marginTop="28dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_launcher_round"/>
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_photo"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                style="@style/text_16_black"
                android:text="张三"/>
            <TextView
                android:id="@+id/tv_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                style="@style/text_10_blue"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/shape_rounded_blue_bg"
                android:text="固定岗"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_nick"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_kind_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            style="@style/text_14_whigtgray"
            android:text="固定岗"
            android:layout_below="@+id/rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_view">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"/>
        <TextView
            android:id="@+id/tv_personal_information"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/personal_information"
            style="@style/text_16_black"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="29dp"
            android:drawableRight="@mipmap/ic_arrow_gray_right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_change_phone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/change_phone"
            style="@style/text_16_black"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="29dp"
            android:drawableRight="@mipmap/ic_arrow_gray_right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_change_pass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/change_pass"
            style="@style/text_16_black"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="29dp"
            android:drawableRight="@mipmap/ic_arrow_gray_right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_longzihu_office"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/longzihu_office"
            style="@style/text_16_black"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="29dp"
            android:drawableRight="@mipmap/ic_arrow_gray_right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/contact_us"
            style="@style/text_16_black"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="29dp"
            android:drawableRight="@mipmap/ic_arrow_gray_right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"
           android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_log_out"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/log_out"
            style="@style/text_15_blue"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>