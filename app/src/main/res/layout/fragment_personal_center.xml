<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/pgbg">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:background="@color/colorPrimary"
        />


    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="0dp"
        android:layout_height="154dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:background="@mipmap/ic_personal_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view">

        <qtkj.com.qtoaandroid.viewbar.CircleImageView
            android:id="@+id/iv_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            app:border_width="2dp"
            app:border_color="@color/white"
            android:src="@mipmap/ic_photo"
            />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_photo"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_nick"
                style="@style/text_16_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="张三"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_kind_number"
            style="@style/text_14_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:text="固定岗"
            android:background="@drawable/shape_rounded_blue_bg"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_view">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"/>

        <TextView
            android:id="@+id/tv_personal_information"
            style="@style/text_14_black"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="29dp"
            android:drawableRight="@mipmap/ic_arrow_gray_right"
            android:gravity="center_vertical"
            android:text="@string/personal_information"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/grayline"/>

        <TextView
            android:id="@+id/tv_change_phone"
            style="@style/text_14_black"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="29dp"
            android:drawableRight="@mipmap/ic_arrow_gray_right"
            android:gravity="center_vertical"
            android:text="@string/change_phone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/grayline"/>

        <TextView
            android:id="@+id/tv_change_pass"
            style="@style/text_14_black"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="29dp"
            android:drawableRight="@mipmap/ic_arrow_gray_right"
            android:gravity="center_vertical"
            android:text="@string/change_pass"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/grayline"/>

        <TextView
            android:id="@+id/tv_longzihu_office"
            style="@style/text_14_black"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="29dp"
            android:drawableRight="@mipmap/ic_arrow_gray_right"
            android:gravity="center_vertical"
            android:text="@string/longzihu_office"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/grayline"/>

        <TextView
            android:id="@+id/tv_contact_us"
            style="@style/text_14_black"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="29dp"
            android:drawableRight="@mipmap/ic_arrow_gray_right"
            android:gravity="center_vertical"
            android:text="@string/contact_us"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/grayline"/>

        <TextView
            android:id="@+id/tv_log_out"
            style="@style/text_14_blue"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/log_out"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>